{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:jest/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-extra-semi": ["error"],
    "class-methods-use-this": ["off"],
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "key-spacing": ["error", {
      "afterColon": true,
      "mode": "minimum"
    }]
  }
}
