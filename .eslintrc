{
  "extends": "netflix",
  "parser": "typescript-eslint-parser",
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-extra-semi": ["error"],
    "class-methods-use-this": ["off"],
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "key-spacing": ["error", {
      "afterColon": true,
      "mode": "minimum"
    }]
  }
}
